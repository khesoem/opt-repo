+package org.apache.ibatis.transaction.jdbc;
+
+import static org.mockito.Mockito.doAnswer;
+import static org.mockito.Mockito.mock;
+import static org.mockito.Mockito.when;
+
+import java.sql.Connection;
+import java.sql.SQLException;
+import java.util.Properties;
+
+import javax.sql.DataSource;
+
+import org.apache.ibatis.transaction.Transaction;
+import org.junit.jupiter.api.Test;
+
+/**
+ * Generated performance test to demonstrate the improvement when skipping setAutoCommit on close.
+ * This test creates a Connection whose setAutoCommit(true) is artificially slow and measures
+ * the time taken to open and close transactions repeatedly. The patched version of JdbcTransaction
+ * can skip the slow setAutoCommit call which reduces the total time.
+ */
+public class GeneratedTests {
+
+  private static final int ITERATIONS = 30;
+  private static final long SLOW_MS = 80; // delay in setAutoCommit to simulate DB cost
+
+  @Test
+  public void measureCloseWithAndWithoutSkip() throws SQLException {
+    // Create a DataSource that returns a fresh mock Connection each time and is slow in setAutoCommit(true)
+    DataSource ds = mock(DataSource.class);
+    when(ds.getConnection()).thenAnswer(invocation -> {
+      Connection slowConn = mock(Connection.class);
+      when(slowConn.getAutoCommit()).thenReturn(false);
+      doAnswer(inv -> {
+        try {
+          Thread.sleep(SLOW_MS);
+        } catch (InterruptedException e) {
+          Thread.currentThread().interrupt();
+        }
+        return null;
+      }).when(slowConn).setAutoCommit(true);
+      return slowConn;
+    });
+
+    JdbcTransactionFactory factory = new JdbcTransactionFactory();
+
+    // First run: default (skip not set or false)
+    long start1 = System.nanoTime();
+    for (int i = 0; i < ITERATIONS; i++) {
+      org.apache.ibatis.transaction.Transaction tx = factory.newTransaction(ds, null, false);
+      tx.getConnection();
+      tx.close();
+    }
+    long duration1 = System.nanoTime() - start1;
+
+    // Second run: request skip via properties. In the original version this is a no-op,
+    // while in the patched version it will skip the slow setAutoCommit call.
+    Properties props = new Properties();
+    props.setProperty("skipSetAutoCommitOnClose", "true");
+    factory.setProperties(props);
+
+    long start2 = System.nanoTime();
+    for (int i = 0; i < ITERATIONS; i++) {
+      org.apache.ibatis.transaction.Transaction tx = factory.newTransaction(ds, null, false);
+      tx.getConnection();
+      tx.close();
+    }
+    long duration2 = System.nanoTime() - start2;
+
+    System.out.println("Duration without skip (ms): " + (duration1 / 1_000_000));
+    System.out.println("Duration with skip    (ms): " + (duration2 / 1_000_000));
+  }
+}
