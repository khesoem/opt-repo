/**
 * Generated performance test to demonstrate the execution-time improvement from the patch.
 * The test repeatedly requests only the creation author name property which in the original
 * implementation forces eager retrieval of multiple git-provided properties per invocation.
 * The patched implementation lazily computes and memoizes property values, so repeated access
 * to a single property is much faster.
 */
class GeneratedPerformanceTest {

  private static Path gitRepoRoot;

  @TempDir
  static File tempFolder;

  @BeforeAll
  static void beforeClass() throws IOException {
    URL url = GeneratedPerformanceTest.class.getResource("git-test-repo.zip");
    gitRepoRoot = Paths.get(tempFolder.toPath() + File.separator + "git-test-repo");
    GitLookupTest.unzip(url, tempFolder.toPath());
  }

  @Test
  void authorProviderPerformance() throws Exception {
    Map<String, String> props = new HashMap<>();
    final LicenseCheckMojo mojo = new LicenseCheckMojo();
    mojo.defaultBasedir = gitRepoRoot.toFile();

    try (CopyrightAuthorProvider provider = new CopyrightAuthorProvider()) {
      provider.init(mojo, props);

      String path = "dir1/file1.txt";
      Document document = newDocument(path);

      final int iterations = 100;
      long start = System.nanoTime();
      for (int i = 0; i < iterations; i++) {
        Map<String, String> actual = provider.adjustProperties(mojo, props, document);
        // Access only the name property to trigger the (lazy) resolution of a single property.
        String name = actual.get(CopyrightAuthorProvider.COPYRIGHT_CREATION_AUTHOR_NAME_KEY);
        if (!"Peter Palaga".equals(name)) {
          Assertions.fail("unexpected name: " + name);
        }
      }
      long elapsedMs = (System.nanoTime() - start) / 1_000_000L;
      System.out.println("Elapsed ms for " + iterations + " iterations: " + elapsedMs);
    }
  }

  private static Document newDocument(String relativePath) {
    Path path = Paths.get(gitRepoRoot + File.separator
        + relativePath.replace('/', File.separatorChar));
    return new Document(path.toFile(), null, StandardCharsets.UTF_8, new String[0], null);
  }

}

